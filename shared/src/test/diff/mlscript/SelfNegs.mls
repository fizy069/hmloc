
// * Here the two occurrences of `'a` in different types are separate:
def foo(f: (~'a) -> 'a, a: 'a) =
  f a
//│ foo: (~'a -> 'a, ~'a,) -> 'a

def foo(fa: ((~'a) -> 'a, 'a)) =
  fa._1 fa._2
//│ foo: (~'a -> 'a, 'a,) -> 'a

:ns
foo
//│ res: (~'a -> 'a, 'a,) -> 'b
//│   where
//│     'a <: 'b & 'c
